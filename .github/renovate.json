{
  "extends": [
    "config:base",
    "schedule:weekly"
  ],
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchPaths": ["+(composer.json)"],
      "enabled": true,
      "groupName": "root-composer"
    },
    {
      "matchPaths": ["build-cs/**"],
      "enabled": true,
      "groupName": "build-cs"
    },
    {
      "matchPaths": [".github/**"],
      "enabled": true,
      "groupName": "github-actions"
    }
  ]
}
